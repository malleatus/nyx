{
  "name": "@malleatus/nyx",
  "version": "0.3.0",
  "repository": "https://github.com/malleatus/nyx.git",
  "license": "MIT",
  "author": "David J. Hamilton <dhamilton@linkedin.com>",
  "contributors": [
    "Robert Jackson <me@rwjblue.com>"
  ],
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "npm-run-all build:clean build:ts build:ts:defs",
    "build:clean": "rimraf dist",
    "prepare": "npm-run-all build",
    "build:ts": "tsc",
    "build:ts:defs": "tsc --declaration --emitDeclarationOnly",
    "build:watch": "tsc --watch",
    "repl": "ts-node -D 7017 -D 2393 -D 1007",
    "lint": "eslint --cache . --ext js,ts",
    "test": "npm-run-all lint build test:jest",
    "test:jest": "jest --runInBand",
    "test:jest:record": "RECORD_HAR=1 jest --runInBand",
    "test:jest:debug": "NODE_OPTIONS='--inspect-brk' jest --testTimeout=0 --runInBand"
  },
  "dependencies": {
    "@octokit/rest": "^18.12.0",
    "@types/yargs": "^17.0.21",
    "hard-rejection": "^2.1.0",
    "moment": "^2.29.4",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@pollyjs/adapter-node-http": "^5.1.1",
    "@pollyjs/core": "^6.0.4",
    "@pollyjs/persister-fs": "^6.0.0",
    "@sinonjs/fake-timers": "^10.0.0",
    "@tracerbench/har": "^8.0.0",
    "@types/jest": "^27.5.0",
    "@types/pollyjs__adapter-node-http": "^2.0.1",
    "@types/pollyjs__core": "^4.3.3",
    "@types/pollyjs__persister-fs": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^25.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "release-it": "^14.14.3",
    "release-it-lerna-changelog": "^4.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^9.1.1",
    "typescript": "~4.8.4"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "dist/*",
    "!dist/**/*.test.*",
    "!dist/__tests__",
    "!dist/__utils__"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.14.0 || >=16.13.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "node": "16.13.1",
    "yarn": "1.22.4"
  }
}
